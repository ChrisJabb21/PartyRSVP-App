@model PartyRSVP2.Models.GuestResponse


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Party RSVP</title>
</head>
<body>


    <div>
    <h1>Welcome to the RSVP page!</h1>
    <p>Please enter your information below</p>
    </div>

    <div class="container"></div>
    <div class="row">
            <div class="col-md-6">
    <form class="column" asp-action="RsvpForm" method="post">
        <p>
            <label asp-for="FirstName">Your first name:</label>
            <input asp-for="FirstName" />
        </p>
        <p>
            <label asp-for="LastName">Your last name:</label>
            <input asp-for="LastName" />
        </p>
        <p>
            <label asp-for="Email">Your email:</label>
            <input asp-for="Email" />
        </p>
        <p>
            <label asp-for="Phone">Your phone:</label>
            <input asp-for="Phone" /></p>
        <p>
            <label>Will you attend?</label>
            <select asp-for="WillAttend">
                <option value="">Choose an option</option>
                <option value="true">Yes, I'll be there</option>
                <option value="false">No, I can't come</option>
            </select>
        </p>
        <button type="submit">Submit RSVP</button>
    </form>
            </div>
    </div>
<div class="row">
    <div class="col-md-6">

    <img src="https://thereaderonline.files.wordpress.com/2012/03/fireworks_small.jpg" align="upper right" height="300" width="300"> 
    </div>

</div>
</body>
</html>